<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color_thumb</item>
        <item name="trackTint">@color/switch_color_track</item>
    </style>

    <style name="AppDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- DEFINE LIGHT THEME FOR DIALOG -->
    </style>

    <style name="CustomTabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
    </style>

</resources>
