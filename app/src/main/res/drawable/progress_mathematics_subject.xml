<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/mathematics_subject_color" />
            <size
                android:height="15dp"
                android:width="15dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:id="@android:id/background"
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@color/background" />
            <size
                android:height="15dp"
                android:width="15dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item>
                    <color android:color="#00000000" />
                    <shape>
                        <corners android:radius="10dp" />
                    </shape>
                </item>
                <item
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp">
                    <shape>
                        <solid android:color="@color/mathematics_subject_color" />
                        <corners android:radius="10dp" />
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>