<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="40dp">
        <shape>
            <corners
                android:radius="8dip" />
            <gradient
                android:startColor="@color/singin_facebook_back"
                android:centerY="0.50"
                android:endColor="@color/singin_facebook_back"
                android:angle="270"/>
        </shape>
    </item>
    <item
        android:height="40dp">
        <shape>
            <corners
                android:radius="8dip" />
            <gradient
                android:startColor="@color/singin_facebook_front"
                android:centerY="0.50"
                android:endColor="@color/singin_facebook_front"
                android:angle="270" />
        </shape>
    </item>
</layer-list>