<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="@dimen/height_square"
        android:width="@dimen/width_square">
        <shape>
            <corners
                android:radius="10dip" />
            <gradient
                android:startColor="@color/background"
                android:centerY="0.50"
                android:endColor="@color/background"
                android:angle="270"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:bottom="10dp"
                android:top="10dp">
            </padding>
        </shape>
    </item>

    <item
        android:height="@dimen/height_square_padding"
        android:width="@dimen/width_square_padding">
        <shape>
            <corners
                android:radius="10dip" />
            <gradient
                android:startColor="@color/square_first_padding_color"
                android:centerY="0.50"
                android:endColor="@color/square_first_padding_color"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>