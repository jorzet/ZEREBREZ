<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_zerebrez_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zerebrez_main_icon"/>

        <TextView
            android:id="@+id/tv_need_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_zerebrez_icon"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="Es necesario actualizar"/>

        <Button
            android:id="@+id/btn_update_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_need_update"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/continue_background_button"
            android:text="Actualizar"/>

    </RelativeLayout>


</RelativeLayout>