<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/rl_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/gray_line1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gray_line_icon"/>

        <TextView
            android:id="@+id/text_practice_questions"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gray_line1"
            android:layout_marginTop="20dp"
            android:lines="3"
            android:text="@string/here_you_can_check_your_advance"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_practice_questions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/gray_line_icon"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_it_is_understand"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_content_text"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/it_is_understood_button_background">
        <TextView
            android:id="@+id/btn_it_is_understand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="@string/it_is_understood"
            android:textSize="17sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>