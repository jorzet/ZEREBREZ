<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/tv_exam_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="EXAMEN 1"
        android:textColor="@color/comipems_2017_text_color"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/iv_gary_line"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_exam_number"
        android:layout_marginTop="20dp"
        android:background="@color/line_1_background_color"/>


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bc_exams_average"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/iv_gary_line"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>