<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/rl_return_to_answer"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/show_answer_button_background">

        <TextView
            android:id="@+id/tv_return_to_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" R E G R E S A R "
            android:textSize="10sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_question_to_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_return_to_answer"
        android:layout_marginTop="5dp"
        android:text=" Selecciona la pregunta a la que quieras saltar "
        android:textSize="10sp"
        android:textColor="@color/question_to_answer_text_color"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_questions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_question_to_answer"
        android:layout_marginTop="5dp"/>

</RelativeLayout>