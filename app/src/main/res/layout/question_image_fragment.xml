<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_question_option_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/question_background_color">
                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="question"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_gray_line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gray_line_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_question"
                    android:layout_marginTop="5dp"/>

                <com.zerebrez.zerebrez.adapters.NonScrollListView
                    android:id="@+id/nslv_image_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_below="@id/iv_gray_line1"
                    android:layout_marginTop="30dp"
                    android:numColumns="1"
                    android:clickable="false">
                </com.zerebrez.zerebrez.adapters.NonScrollListView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/nslv_image_container">
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_question_option_container"
                android:background="@color/answer_background_color">

                <LinearLayout
                    android:id="@+id/rl_answer_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_option_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_option_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/option_a_text"
                            android:textColor="@color/option_answer_text_color"
                            android:textSize="25sp"/>

                        <ImageView
                            android:id="@+id/iv_option_a"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_option_a"
                            android:layout_toEndOf="@+id/tv_option_a"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_option_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/tv_option_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/option_b_text"
                            android:textColor="@color/option_answer_text_color"
                            android:textSize="25sp"/>

                        <ImageView
                            android:id="@+id/iv_option_b"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_option_b"
                            android:layout_toEndOf="@+id/tv_option_b"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_option_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/tv_option_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/option_c_text"
                            android:textColor="@color/option_answer_text_color"
                            android:textSize="25sp"/>

                        <ImageView
                            android:id="@+id/iv_option_c"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_option_c"
                            android:layout_toEndOf="@+id/tv_option_c"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_option_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:id="@+id/tv_option_d"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/option_d_text"
                            android:textColor="@color/option_answer_text_color"
                            android:textSize="25sp"/>

                        <ImageView
                            android:id="@+id/iv_option_d"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_option_d"
                            android:layout_toEndOf="@+id/tv_option_d"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>