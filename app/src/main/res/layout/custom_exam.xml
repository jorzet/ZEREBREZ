<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/rl_background"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_exam_item_background">

            <TextView
                android:id="@+id/tv_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/exam_text"
                android:textColor="@color/exam_text_color"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_exam_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_exam"
                android:layout_toEndOf="@+id/tv_exam"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="1"
                android:textColor="@color/exam_text_color"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_vertical_line"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_vertical_line"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/tv_hits_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:text="23"
                            android:textColor="@color/exam_text_color"
                            android:textSize="13sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>