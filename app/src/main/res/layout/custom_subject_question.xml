<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_row"
    android:layout_height="@dimen/height_row"
    android:background="@drawable/unchecked_module_background"
    android:padding="20dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:stretchColumns="1"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="@dimen/height_square"
        android:layout_height="@dimen/height_square"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="regresar"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:visibility="gone"/>

</RelativeLayout>